@page "/dashboard"
@using BlazorApp1.Data
@inject BlazorApp1.Services.GetService getService


<h3>Info Server</h3>

<div class="container">
    <div class="container text-center">
        <div class="row">
            <div class="col">
                <div class="input-group mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-default">Temperature</span>
                    <input @bind="entry.Temperature" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" disabled>
                </div>
            </div>
            <div class="col">
                <div class="input-group mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-default">Last Update</span>
                    <input @bind="entry.Time" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" disabled>
                </div>
            </div>
        </div>
    </div>
</div>

@code {

    DataGet entry = new DataGet();

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();

        entry = await getService.GetAll();
    }

}
